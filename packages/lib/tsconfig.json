{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "composite": true,
    "rootDir": "./src"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules*"]
}